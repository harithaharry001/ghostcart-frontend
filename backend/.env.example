# GhostCart Backend Environment Configuration

# AWS Bedrock Configuration
# Use any region where Claude Sonnet 4.5 is available (us-east-1, us-west-2, etc.)
AWS_REGION=us-east-1
AWS_BEDROCK_MODEL_ID=us.anthropic.claude-sonnet-4-20250514-v1:0
# AWS credentials should be configured via AWS CLI or environment

# Demo Configuration
DEMO_MODE=true
LOG_LEVEL=INFO

# Cryptographic Secrets (HMAC-SHA256 demo keys - CHANGE IN PRODUCTION)
USER_SIGNATURE_SECRET=user_secret_key_demo_only_change_me
AGENT_SIGNATURE_SECRET=agent_secret_key_demo_only_change_me
PAYMENT_AGENT_SECRET=payment_secret_key_demo_only_change_me

# Database
DATABASE_PATH=./ghostcart.db

# Server
HOST=0.0.0.0
PORT=8000
